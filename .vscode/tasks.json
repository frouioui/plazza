{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build ALl",
            "type": "shell",
            "command": "make re",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run Criterion Tests",
            "type": "shell",
            "command": "make tests_run",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^\\[----\\] (.*):(\\d+):\\s(.*)$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                }
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Clean All",
            "type": "shell",
            "command": "make clean",
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Fclean All",
            "type": "shell",
            "command": "make fclean",
            "group": "none",
            "problemMatcher": []
        }
    ]
}