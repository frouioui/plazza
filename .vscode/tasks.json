{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build ALl",
      "type": "shell",
      "command": "make re",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "make debug",
      "type": "shell",
      "command": "make debug",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Build Doc",
      "type": "shell",
      "command": "make docs",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.*):(\\d+):\\swarning:(.*)",
          "file": 1,
          "location": 2,
          "message": 3
        }
      }
    },
    {
      "label": "Run Criterion Tests",
      "type": "shell",
      "command": "make tests_run",
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^\\[----\\] (.*):(\\d+):\\s(.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        }
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Clean All",
      "type": "shell",
      "command": "make clean",
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Fclean All",
      "type": "shell",
      "command": "make fclean",
      "group": "none",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "/usr/bin"
      }
    }
  ]
}